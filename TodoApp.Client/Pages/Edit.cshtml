@page "{id:long}"
@model TodoApp.Client.Pages.EditModel
@{
    ViewData["Title"] = "Edit Task";
}

<h1 class="display-4">Edit Task: @Model.TaskToEdit.Name</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <!-- Hidden ID field is REQUIRED to identify which task to update on the server -->
            <input type="hidden" asp-for="TaskToEdit.Id" />

            <!-- Summary for general and name-specific server errors (e.g., Duplicate Name) -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="TaskToEdit.Name" class="form-label"></label>
                <!-- Client-side validation for Required and StringLength -->
                <input asp-for="TaskToEdit.Name" class="form-control" />
                <span asp-validation-for="TaskToEdit.Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TaskToEdit.Priority" class="form-label"></label>
                <!-- Client-side validation for Required and Range -->
                <input asp-for="TaskToEdit.Priority" class="form-control" type="number" />
                <span asp-validation-for="TaskToEdit.Priority" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="TaskToEdit.Status" class="form-label"></label>
                <!-- Dropdown for selecting the status, populated by StatusOptions SelectList -->
                <select asp-for="TaskToEdit.Status" asp-items="Model.StatusOptions" class="form-select"></select>
                <span asp-validation-for="TaskToEdit.Status" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success">Save Changes</button>
                <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <!-- Re-includes the scripts needed for client-side validation -->
    <partial name="_ValidationScriptsPartial" />
}
